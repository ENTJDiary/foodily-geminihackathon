rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User data - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User's restaurants
      match /restaurants/{restaurantId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's food logs
      match /foodLogs/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's reviews
      match /reviews/{reviewId} {
        allow read: if true; // Reviews are publicly readable
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // User preferences (users can only read/write their own preferences)
    match /userPreferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Onboarding data (users can only read/write their own onboarding data)
    match /onboardingData/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.data.userId == userId
                   && request.resource.data.city is string
                   && request.resource.data.dateOfBirth is string
                   && request.resource.data.sex in ['Male', 'Female', 'Prefer not to say']
                   && request.resource.data.cuisinePreferences is list
                   && request.resource.data.dietaryRestrictions is list
                   && request.resource.data.termsAccepted == true;
    }
    
    // Public restaurant data (read-only for all users)
    match /restaurants/{restaurantId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can contribute
    }
    
    // Community insights (publicly readable, authenticated write)
    match /insights/{insightId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Reviews collection (top-level, publicly readable, authenticated write)
    match /reviews/{reviewId} {
      allow read: if true; // Anyone can read reviews
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Community Posts collection (top-level, publicly readable, authenticated write)
    match /communityPosts/{postId} {
      allow read: if true; // Anyone can read community posts
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Review Likes (Authenticated users can create/delete their own likes)
    match /reviewLikes/{likeId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Post Likes (Authenticated users can create/delete their own likes)
    match /postLikes/{likeId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Saved Restaurants (Users can only read/write their own)
    match /savedRestaurants/{saveId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Saved Menu Items (Users can only read/write their own)
    match /savedMenuItems/{saveId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Restaurant Clicks (Users can only read/write their own)
    match /restaurantClicks/{clickId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
